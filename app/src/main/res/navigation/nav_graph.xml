<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.help_kiosk.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.help_kiosk.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mcdonaldsFragment"
            app:destination="@id/mcdonaldsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bugerkingFragment"
            app:destination="@id/bugerkingFragment" />
    </fragment>
    <fragment
        android:id="@+id/mcdonaldsFragment"
        android:name="com.help_kiosk.McdonaldsFragment"
        android:label="fragment_mcdonalds"
        tools:layout="@layout/fragment_mcdonalds" />
    <fragment
        android:id="@+id/bugerkingFragment"
        android:name="com.help_kiosk.BugerkingFragment"
        android:label="fragment_bugerking"
        tools:layout="@layout/fragment_bugerking" />

</navigation>